{
  "plugins": [
    "react"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "parser": "babel-eslint",
  "globals": {
    "arguments": true
  },
  "rules": {
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "max-len": [
      "error",
      80,
      {
        "ignoreComments": true,
        "ignoreUrls": true,
        "ignorePattern": "(throw|export).*"
      }
    ],
    "semi": [
      "error",
      "always"
    ],
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "operator-linebreak": [
      "error",
      "after",
      {
        "overrides": {
          "?": "ignore",
          ":": "ignore"
        }
      }
    ],
    "arrow-parens": [
      "error",
      "as-needed"
    ],
    "react/prop-types": "off",
    "no-var": [
      "error"
    ],
    "no-case-declarations": "off",
    "camelcase": "error",
    "no-console": "off",
    "react/display-name": "off"
  }
}